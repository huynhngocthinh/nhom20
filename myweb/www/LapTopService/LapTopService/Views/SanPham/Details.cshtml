@model IEnumerable<LapTopService.ServiceReferenceSanPham.SanPham>
@{
    ViewBag.Title = "Chi tiết sản phẩm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div style="height:21px">
    Chi tiết sản phẩm
</div>
<div  style="padding-top: 20px; font-family:'Segoe UI Light'">
    <div style="width:690px;">
        
            @foreach (var pro in Model)
            {
                <div style="float: left; width: 300px;">
                    <img style="max-width:300px; max-height:300px;" src="~/Content/images/SanPham/@Html.DisplayFor(i => pro.HinhAnh)" />
                </div>
                <div style="">
                    <span style="font-weight: 700; font-size: xx-large;">@pro.TenSP</span>
                    <br />
                    <br />
                    <span style="color: #FF3300; font-size: x-large; font-weight: 700;">@pro.Gia VND</span>
                    <br />
                    <br />
                    <span>Số lượng: </span>
                    <span  style="font-size: large; color: red">@pro.SoLuong</span>
                    <br />
                    <br />
                    <span style="font-size: large">@pro.MoTa</span>
                    <br />
                    <br />
                        <div>
                            <a href="@Url.Action("themgiohang", "GioHang", new { masanpham = pro.MaSP })"><img src="~/Content/images/icon_buy.gif" /></a>
                        </div>
                    <br />
                </div>
            }
        
    </div>
</div>
