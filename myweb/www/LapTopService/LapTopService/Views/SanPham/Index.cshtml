@model IEnumerable<LapTopService.ServiceReferenceSanPham.SanPham>
@{
    ViewBag.Title = "DI Động Nhóm 20";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="center_content">
      <div class="oferta"> <img src="/Content/images/p1.png" width="165" height="113" border="0" class="oferta_img" alt="" />
        <div class="oferta_details">
          <div class="oferta_title">Nhóm 20</div>
          <div class="oferta_text">Thành viên: Nguyễn Phụng, Huỳnh Ngọc Thịnh </div>
           </div>
      </div>
      <div class="center_title_bar">Sản Phẩm Mới</div>
    @foreach (var pro in Model.Take(9))
    {
      <div class="prod_box">
        <div class="center_prod_box">
          <div class="product_title"><a href="@Url.Action("Details", "SanPham", new { id = pro.MaSP})">@pro.TenSP</a></div>
          <div class="product_img"><a href="@Url.Action("Details", "SanPham", new { id = pro.MaSP})"><img src="~/Content/images/@pro.HinhAnh" alt="" border="0" height ="150" width="180" /></a></div>
          <div class="prod_price"><span class="reduce"></span> <span class="price">@pro.Gia đ</span></div>
        </div>
        <div class="prod_details_tab"> <a href="@Url.Action("themgiohang", "GioHang", new { masanpham = pro.MaSP })" class="prod_buy">Đặt Mua</a> <a href="@Url.Action("Details", "SanPham", new { id = pro.MaSP})" class="prod_details">Chi tiết</a> </div>
      </div>   
    }  
      <div class="center_title_bar"></div>
    </div>